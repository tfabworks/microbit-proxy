{
  "name": "tfabworks-edge-client",
  "homepage": "https://tfabworks.com",
  "version": "0.5.5-typescript",
  "description": "mbit open the web.",
  "main": "dist",
  "scripts": {
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "build": "cross-env NODE_ENV=development webpack",
    "build:prod": "cross-env NODE_ENV=production webpack",
    "watch": "webpack -w",
    "dist": "npm run build:prod && electron-builder -w",
    "clean": "rm -rf ./node_modules/ && rm -rf ./build/",
    "test": "jest",
    "release": "build"
  },
  "author": {
    "name": "Saggggo",
    "email": "sago@syun.jp"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/electron-json-storage": "^4.0.0",
    "@types/events": "^3.0.0",
    "@types/isomorphic-fetch": "0.0.35",
    "@types/lodash": "^4.14.133",
    "@types/qrcode": "^1.3.3",
    "@types/react": "^16.8.19",
    "@types/react-dom": "^16.8.4",
    "@types/serialport": "^7.0.3",
    "@types/uuid": "^3.4.4",
    "cross-env": "^5.2.0",
    "electron": "^4.2.3",
    "electron-builder": "^20.41.0",
    "jest": "^24.8.0",
    "ts-loader": "^6.0.2",
    "typescript": "^3.5.1",
    "webpack": "^4.32.2",
    "webpack-cli": "^3.3.2"
  },
  "dependencies": {
    "bulma": "^0.7.5",
    "electron-json-storage": "^4.1.6",
    "electron-updater": "^4.0.6",
    "isomorphic-fetch": "^2.2.1",
    "lodash": "^4.17.11",
    "prop-types": "^15.7.2",
    "qrcode": "^1.3.3",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-toastify": "^5.0.0-rc.3",
    "serialport": "^7.1.4",
    "uuid": "^3.3.2"
  },
  "build": {
    "productName": "tfabworks-edge-client",
    "appId": "com.tfabworks",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "build/icons/*",
      "index.html"
    ],
    "mac": {
      "icon": "build/icons/microbit-proxy.icns",
      "category": "education"
    },
    "win": {
      "icon": "build/icons/microbit-proxy.ico",
      "target": [
        "nsis"
      ],
      "publish": [
        "github"
      ]
    },
    "linux": {
      "icon": "build/icons/microbit-proxy.png",
      "target": [
        "deb"
      ],
      "category": "Education"
    }
  }
}
