{
  "name": "microbit-proxy",
  "homepage": "./",
  "version": "0.2.4",
  "description": "mbit open the web.",
  "main": "dist/main",
  "scripts": {
    "start": "NODE_ENV=dev electron .",
    "postinstall": "electron-builder install-app-deps",
    "build": "standard src --fix && babel src --out-dir dist",
    "dist": "electron-builder -w",
    "clean": "rm -rf ./node_modules/ && rm -rf ./build/",
    "test": "jest"
  },
  "author": {
    "name": "Saggggo",
    "email": "sago@syun.jp"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "babel-jest": "^24.5.0",
    "electron-builder": "^20.39.0",
    "jest": "^24.5.0",
    "standard": "^12.0.1"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "electron": "^4.1.0",
    "electron-json-storage": "^4.1.6",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "prop-types": "^15.7.2",
    "isomorphic-fetch": "^2.2.1",
    "uuid": "^3.3.2",
    "lodash": "^4.17.11",
    "serialport": "^7.1.4",
    "xterm": "^3.12.0",
    "bulma": "^0.7.4"
  },
  "build": {
    "productName": "microbit-proxy",
    "appId": "tokyo.centerof",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "build/icons/*",
      "index.html"
    ],
    "mac": {
      "icon": "build/icons/microbit-proxy.icns",
      "category": "education"
    },
    "win": {
      "icon": "build/icons/microbit-proxy.ico",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "build/icons/microbit-proxy.png",
      "target": [
        "deb"
      ],
      "category": "Education"
    }
  }
}
